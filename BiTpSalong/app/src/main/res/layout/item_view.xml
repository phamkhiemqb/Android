<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boder1"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/it_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:drawable/screen_background_light"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:id="@+id/it_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:text="Eastbluff Drive"/>

        <Button
            android:id="@+id/it_btn_book"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            android:layout_below="@+id/it_txt_title"
            android:background="@drawable/boder"
            android:text="BOOK NOW"
            android:textColor="#fff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/it_txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/it_btn_book"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="2525 Easbluff Drive Newport Beach, CA"/>

    </RelativeLayout>


</LinearLayout>