<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/im_photo"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="#000"
                android:text="Tieu de"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/outline_phone_black_18dp"/>
                <TextView

                    android:id="@+id/txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0123456789"
                    android:textSize="19dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/outline_place_black_18dp"/>
                <TextView

                    android:id="@+id/txt_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25 Tran Hung Dao"
                    android:textSize="19dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/outline_access_time_black_18dp"/>
                <TextView

                    android:id="@+id/txt_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7.00 AM "
                    android:textSize="19dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_book"
                android:layout_marginTop="15dp"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/boder"
                android:text="BOOK NOW"
                android:textColor="#fff"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Salon "
                android:textSize="19dp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/txt_about_salon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="6"
                android:text="Là khách sạn 5 sao, Grand Mercure tọa lạc ngay Khu Đảo Xanh trung tâm thành phố. Khách sạn có vị trí thuận lợi, nằm sát bên cây cầu Trần Thị Lý xinh đẹp.Khách sạn có 272 khu phòng. Các phòng đều được trang bị các tiện nghi đầy đủ, có hồ bơi đặc biệt,khu spa và hai nhà hàng sang trọng. Đặc biệt ở đây có dịch vụ đưa đón sân bay miễn phí, xe đưa đón tới trung tâm thành phố hoặc biển. Với dịch vụ ăn uống cả ngày,bữa sáng đầy đủ được phục vụ bởi đội ngũ nhà hàng chuyên nghiệp La Rive Gauche. Nằm gần biển nên quí khách có thể đi dạo ngay bờ biển từ chỗ nghỉ của khách sạn"
                android:textSize="17dp" />
            <Button
                android:id="@+id/btn_viewmore"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14dp"
                android:textColor="#006aff"
                android:text="View more"
                android:background="@android:drawable/screen_background_light"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcview"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            >


        </android.support.v7.widget.RecyclerView>


    </LinearLayout>
</ScrollView>