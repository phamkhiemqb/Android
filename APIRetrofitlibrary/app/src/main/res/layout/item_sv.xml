<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:id="@+id/txt_it_id"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="#df5600"
        android:src="@drawable/ic_launcher_background"

        />
    <TextView
        android:layout_width="1dp"
        android:layout_height="65dp"
        android:background="#999"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/txt_it_id"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txt_it_id"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="9dp"
            android:id="@+id/txt_it_name"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="#943700"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpha" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textColor="#943700"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GiÃ¡: "
                />
            <TextView
                android:id="@+id/txt_it_price"
                android:paddingLeft="5dp"
                android:textStyle="italic"
                android:textColor="#943700"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6000000"
                />

        </LinearLayout>




    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/txt_it_id"
        android:background="#999"/>
    <ImageView
        android:id="@+id/btn_it_Delete"
        android:layout_centerVertical="true"
        android:alpha="0.1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/clear"/>

    <ImageView
        android:id="@+id/btn_it_Edit"
        android:layout_width="25dp"
        android:alpha="0.1"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btn_it_Delete"
        android:layout_centerVertical="true"
        android:background="@drawable/create"/>


</RelativeLayout>