<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:id="@+id/txt_it_id"
        android:text="1"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="#df5600"
        android:background="#a0ddef"

        />
    <TextView
        android:layout_width="1dp"
        android:layout_height="65dp"
        android:background="#999"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/txt_it_id"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txt_it_id"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_it_name"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="#943700"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A" />
        <TextView
            android:id="@+id/txt_it_address"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="#943700"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đà Nẵng"
            />
        <TextView
            android:id="@+id/txt_it_phone"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="#943700"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123456789"
            />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/txt_it_id"
        android:background="#999"/>


</RelativeLayout>